  <!-- ================= MAIN CONTENT ================= -->
  <main class="main-content">
    <header class="content-header">
      <h1>Users</h1>
    </header>

    <div class="content-body">

      <!-- SEARCH -->
      <div style="margin-bottom:20px;">
        <input
          type="text"
          id="searchUsers"
          placeholder="üîç Search users..."
          style="width:100%;max-width:400px;padding:10px 14px;border:1px solid #e2e8f0;border-radius:8px;"
        >
      </div>

      <!-- USERS TABLE -->
      <div class="card">
        <div class="table-container">
          <table class="data-table">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Telegram</th>
                <th>Phone</th>
                <th>Joined</th>
                <th>Actions</th>
              </tr>
            </thead>

            <tbody id="usersTable">
              <% if (users.length > 0) { %>
                <% users.forEach(user => { %>
                  <tr>
                    <td><%= user.id %></td>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.role %></td>

                    <td>
                      <% if (user.telegram_id) { %>
                        ‚úÖ Linked
                      <% } else { %>
                        ‚ùå Not linked
                      <% } %>
                    </td>

                    <td><%= user.phone_number || '-' %></td>
                    <td><%= new Date(user.created_at).toLocaleDateString() %></td>

                    <td>
                      <button
                        class="btn btn-sm btn-primary view-user"
                        data-id="<%= user.id %>">
                        View
                      </button>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="8" style="text-align:center;">
                    No users found
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
</div>

