          </div>

          <div class="live-stat-card">
            <div class="live-stat-label">Orders</div>
            <div class="live-stat-value" id="liveOrders">0</div>
          </div>

          <div class="live-stat-card">
            <h4>Customer behaviour</h4>
            <p>Active carts: <strong id="activeCarts">0</strong></p>
            <p>Checking out: <strong id="checkingOut">0</strong></p>
            <p>Purchased: <strong id="purchased">0</strong></p>
          </div>

          <div class="live-stat-card">
            <h4>Sessions by location</h4>
            <div id="sessionsByLocation"></div>
          </div>

          <div class="live-stat-card">
            <h4>New vs Returning</h4>
            <canvas id="customerTypeChart"></canvas>
          </div>

        </div>

        <!-- ===== MAP ===== -->
