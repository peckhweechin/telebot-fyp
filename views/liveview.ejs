    <div class="content-body">

      <div class="live-view-grid">

        <!-- ===== LEFT STATS ===== -->
        <div class="live-view-left">

          <div class="live-stat-card">
            <div class="live-stat-label">Visitors right now</div>
            <div class="live-stat-value" id="visitorsNow">0</div>
          </div>

          <div class="live-stat-card">
