          <div id="liveMap"></div>
        </div>

        <!-- ===== NOTIFICATION COLUMN ===== -->
        <div class="live-view-right">
          <h3>Live Notifications</h3>
          <div id="liveNotifications" class="notification-list"></div>
        </div>

