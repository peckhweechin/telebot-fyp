  <!-- ===== MAIN CONTENT ===== -->
  <main class="main-content">
    <header class="content-header">
      <h1>Customer Segments</h1>
    </header>

    <div class="content-body">

      <!-- ===== SEGMENTS LIST ===== -->
      <div id="segmentsListView">
        <div class="segments-header">
          <input
            type="text"
            id="searchSegments"
            placeholder="üîç Search segments..."
            class="search-input"
            style="max-width:300px"
          >
          <button class="btn btn-primary">+ Create segment</button>
        </div>

        <div class="card">
          <div class="table-container">
            <table class="data-table">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>% of customers</th>
                  <th>Last activity</th>
                  <th>Created by</th>
                </tr>
              </thead>
              <tbody>
                <% if (segments && segments.length > 0) { %>
                  <% segments.forEach(segment => { %>
                    <tr>
                      <td><%= segment.name %></td>
                      <td><%= segment.percentage %>%</td>
                      <td><%= segment.last_activity || '-' %></td>
                      <td><%= segment.created_by || 'System' %></td>
                    </tr>
                  <% }) %>
                <% } else { %>
                  <tr>
                    <td colspan="4" class="text-center">
                      No segments created yet
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

    </div>
  </main>
