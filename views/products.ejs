        </div>
      </div>

      <div class="nav-dropdown">
        <button class="nav-dropdown-toggle" type="button">
          <div style="display:flex;align-items:center;">
            <span class="nav-icon">üë•</span>
            <span class="nav-text">Customers</span>
          </div>
          <span class="dropdown-arrow">‚ñ∂</span>
        </button>
        <div class="nav-submenu">
          <a href="/users" class="nav-item">All Customers</a>
          <a href="/segments" class="nav-item">Segments</a>
        </div>
      </div>

      <div class="nav-dropdown">
        <button class="nav-dropdown-toggle" type="button">
          <div style="display:flex;align-items:center;">
            <span class="nav-icon">üì¶</span>
            <span class="nav-text">Orders</span>
          </div>
          <span class="dropdown-arrow">‚ñ∂</span>
        </button>
        <div class="nav-submenu">
          <a href="/orders" class="nav-item">All Orders</a>
          <a href="/abandoned-checkouts" class="nav-item">Abandoned Checkouts</a>
        </div>
      </div>

      <a href="/discounts" class="nav-item">
        <span class="nav-icon">üè∑Ô∏è</span>
        <span class="nav-text">Discounts</span>
      </a>

      <a href="/analytics" class="nav-item">
        <span class="nav-icon">üìà</span>
        <span class="nav-text">Analytics</span>
      </a>

      <a href="/liveview" class="nav-item">
        <span class="nav-icon">üî¥</span>
        <span class="nav-text">Live View</span>
      </a>
    </nav>

    <div class="sidebar-notifications">
      <div class="notifications-header">
        <span>Notifications</span>
        <span class="notifications-count" id="notifCount"></span>
      </div>
      <div class="notifications-list" id="notificationsList"></div>
    </div>

    <form action="/logout" method="POST">
      <button type="submit" class="btn btn-secondary btn-block">Logout</button>
    </form>
  </aside>

  <!-- MAIN -->
  <main class="main-content">
    <header class="content-header">
      <h1>
        <a href="/admin/products" class="page-title-link">Products</a>
      </h1>

      <div class="header-actions">
        <a href="/admin/addproduct" class="btn btn-primary">+ Add Product</a>
      </div>
    </header>

    <div class="content-body">

      <%
        const qs =
          (q ? '&q=' + encodeURIComponent(q) : '') +
          (categoryId ? '&category_id=' + encodeURIComponent(categoryId) : '');
      %>

      <!-- ‚úÖ Live Search (smaller, no button, like Categories) -->
      <div class="search-container" style="margin-bottom: 20px;">
        <input
          type="text"
          id="searchProducts"
          placeholder="üîç Search products..."
          value="<%= q || '' %>"
        >
      </div>

      <!-- Products Table -->
      <div class="card">
        <div class="table-container">
          <table class="data-table">
            <thead>
              <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Description</th>
                <th>Category</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>

            <!-- ‚úÖ added id for live filtering -->
            <tbody id="productsTable">
              <% if (!products || products.length === 0) { %>
                <tr>
                  <td colspan="8" class="text-center text-muted">No products found</td>
                </tr>
              <% } else { %>
                <% products.forEach(p => { %>
                  <tr>
                    <td>
                      <% if (p.image_url) { %>
                        <img src="<%= p.image_url %>" alt="Product" style="width:40px;height:40px;object-fit:cover;border-radius:6px;">
                      <% } else { %>
                        <span class="text-muted">‚Äî</span>
                      <% } %>
                    </td>

                    <td><%= p.name %></td>

                    <td class="text-muted">
                      <%= (p.description || '').length > 60 ? (p.description || '').slice(0, 60) + '...' : (p.description || '') %>
                    </td>

                    <td>
                      <% if (p.category_id) { %>
                        <a
                          class="category-link"
                          href="/admin/products?category_id=<%= p.category_id %>"
                          title="View all products in this category"
                      >
                        <%= p.category_name || '-' %>
                      </a>
                    <% } else { %>
                      -
                    <% } %>
                  </td>

                    <td>$<%= Number(p.price || 0).toFixed(2) %></td>

                    <td><%= p.stock %></td>

                    <td>
                      <% if (p.is_active) { %>
                        <span class="badge badge-success">Active</span>
                      <% } else { %>
                        <span class="badge badge-secondary">Inactive</span>
                      <% } %>
                    </td>

                    <td>
                      <a href="/admin/editproduct/<%= p.id %>" class="btn btn-sm btn-primary">Edit</a>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>

        <!-- Pagination (unchanged) -->
        <% if (totalPages && totalPages > 1) { %>
          <div class="pagination-container">
            <div class="pagination">

              <% if (page > 1) { %>
                <a class="pagination-btn" href="/admin/products?page=<%= page - 1 %><%= q ? '&q=' + encodeURIComponent(q) : '' %>">Prev</a>
              <% } else { %>
                <span class="pagination-btn disabled">Prev</span>
              <% } %>

              <%
                let startPage = Math.max(1, page - 2);
                let endPage = Math.min(totalPages, page + 2);

                if (endPage - startPage < 4) {
                  startPage = Math.max(1, endPage - 4);
                  endPage = Math.min(totalPages, startPage + 4);
                }
              %>

              <% if (startPage > 1) { %>
                <a class="pagination-btn" href="/admin/products?page=1<%= q ? '&q=' + encodeURIComponent(q) : '' %>">1</a>
                <% if (startPage > 2) { %>
                  <span class="pagination-dots">‚Ä¶</span>
                <% } %>
              <% } %>

              <% for (let i = startPage; i <= endPage; i++) { %>
                <a
                  class="pagination-btn <%= i === page ? 'active' : '' %>"
                  href="/admin/products?page=<%= i %><%= qs %>"
                ><%= i %></a>
              <% } %>

              <% if (endPage < totalPages) { %>
                <% if (endPage < totalPages - 1) { %>
                  <span class="pagination-dots">‚Ä¶</span>
                <% } %>
                <a class="pagination-btn" href="/admin/products?page=<%= totalPages %><%= q ? '&q=' + encodeURIComponent(q) : '' %>"><%= totalPages %></a>
              <% } %>

              <% if (page < totalPages) { %>
                <a class="pagination-btn" href="/admin/products?page=<%= page + 1 %><%= q ? '&q=' + encodeURIComponent(q) : '' %>">Next</a>
              <% } else { %>
                <span class="pagination-btn disabled">Next</span>
              <% } %>

            </div>
          </div>
        <% } %>
      </div>
    </div>
  </main>
</div>

<script>
  // ‚úÖ Live filter (like Categories page)
  const searchProducts = document.getElementById('searchProducts');
  const productsTable = document.getElementById('productsTable');

  function filterProducts() {
    const value = (searchProducts.value || '').toLowerCase().trim();
    const rows = productsTable.querySelectorAll('tr');

    rows.forEach(row => {
      // keep the "No products found" row visible if it exists
      const colspanCell = row.querySelector('td[colspan]');
      if (colspanCell) {
        // show it only if there are no real rows OR search doesn't match anything
        // (simple behaviour: hide it when typing anything)
        row.style.display = value ? 'none' : '';
        return;
      }

      const text = row.innerText.toLowerCase();
      row.style.display = text.includes(value) ? '' : 'none';
    });
  }

  searchProducts.addEventListener('input', filterProducts);
  window.addEventListener('DOMContentLoaded', filterProducts);
</script>

<script src="/js/common.js"></script>
<script src="/js/dashboard.js"></script>
</body>
</html>
